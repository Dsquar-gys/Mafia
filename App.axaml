<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Mafia.App"
             xmlns:local="using:Mafia"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.Resources>
		<SolidColorBrush x:Key="DarkBlue">#1B263B</SolidColorBrush>
		<SolidColorBrush x:Key="DarkRed">#8B0000</SolidColorBrush>
		<SolidColorBrush x:Key="DarkGreen">#556B2F</SolidColorBrush>
		<SolidColorBrush x:Key="DarkGray">#696969</SolidColorBrush>
		<SolidColorBrush x:Key="LightBlue">#3B465B</SolidColorBrush>
		<SolidColorBrush x:Key="Golden">#DAA520</SolidColorBrush>
	</Application.Resources>
	
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
	    <StyleInclude Source="avares://Semi.Avalonia/Themes/Index.axaml"/>
    </Application.Styles>
</Application>